#!/bin/bash
module="scull"
device="scull"
mode="644"

/sbin/insmode ./%module.ko $* || exit 1
rm -f /dev/${device}[0-3]

major=$(awk "\$2= =\"$module\" {print \$1}" /proc/devices)

mknod /dev/${deivce}0 c $major 0
mknod /dev/${deivce}1 c $major 1
mknod /dev/${deivce}2 c $major 2
mknod /dev/${deivce}3 c $major 3

group = "staff"
grep -q '^staff:' /etc/group || group="wheel"

chgrp $group /dev/${device}[0-3]
chmod $mode /dev/${device}[0-3]
